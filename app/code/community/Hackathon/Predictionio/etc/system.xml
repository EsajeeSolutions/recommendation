<?xml version="1.0"?>
<config>
  <sections>
	<predictionio  translate="label" module="predictionio">
	<label>PredictionIO</label>
	<tab>catalog</tab>
	<frontend_type>text</frontend_type>
	<sort_order>0</sort_order>
	<show_in_default>1</show_in_default>
	<show_in_website>1</show_in_website>
	<show_in_store>1</show_in_store>            
	<groups>
      <settings translate="label"> 
	  <label>Settings</label>
	  <frontend_type>text</frontend_type>
	  <sort_order>0</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
       <fields>
          <enabled translate="label">
            <label>Is Enabled</label>
            <frontend_type>select</frontend_type>
            <source_model>adminhtml/system_config_source_yesno</source_model>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <comment>If disabled data will not be added to PredictionIO</comment>
        </enabled>
          <predict_host translate="label">
            <label>PredictionIO Host</label>
			      <frontend_type>text</frontend_type>
            <sort_order>2</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </predict_host>
          <predict_port translate="label">
            <label>PredictionIO Port</label>
			      <frontend_type>text</frontend_type>
            <sort_order>3</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<comment>Default 8000</comment>
          </predict_port>
           <predict_recommendation_port translate="label">
               <label>PredictionIO Recommendation Port</label>
               <frontend_type>text</frontend_type>
               <sort_order>3</sort_order>
               <show_in_default>1</show_in_default>
               <show_in_website>1</show_in_website>
               <show_in_store>1</show_in_store>
               <comment>Default 9997</comment>
           </predict_recommendation_port>
           <predict_ranking_port translate="label">
               <label>PredictionIO Ranking Port</label>
               <frontend_type>text</frontend_type>
               <sort_order>3</sort_order>
               <show_in_default>1</show_in_default>
               <show_in_website>1</show_in_website>
               <show_in_store>1</show_in_store>
               <comment>Default 9993</comment>
           </predict_ranking_port>
          <predict_key translate="label">
            <label>Similarity Engine Key</label>
			      <frontend_type>text</frontend_type>
            <sort_order>4</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </predict_key>
          <engine_name translate="label">
            <label>Similarity Engine Name</label>
            <frontend_type>text</frontend_type>
            <sort_order>5</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </engine_name>
          <product_count translate="label">
            <label>Similarity Product Count</label>
            <comment>Number of products to return from PredictionIO</comment>
            <frontend_type>text</frontend_type>
            <sort_order>6</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </product_count> 
          <category_results translate="label">
            <label>Same Category Results</label>
            <comment>Selecting this will limit the returned products to be from the same category</comment>
            <frontend_type>select</frontend_type>
            <source_model>adminhtml/system_config_source_yesno</source_model>
            <sort_order>7</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </category_results>          
          <score_threshold translate="label">
            <label>Prediction Score Threshold</label>
            <comment>Items will lower score then set here will be filtered from Upsell</comment>
            <frontend_type>text</frontend_type>
            <source_model>adminhtml/system_config_source_yesno</source_model>
            <sort_order>8</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
          </score_threshold>
	   </fields>
	   </settings>
	</groups>
	</predictionio>
  </sections>
</config>
